<ResourceDictionary x:Class="ExViewer.Settings.SettingPresenterTemplates"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:ExViewer.Settings"
                    xmlns:controls="using:ExViewer.Controls"
                    xmlns:a="using:ExViewer.Views">
    <DataTemplate x:Name="CatagorySettingTemplate"
                  x:DataType="local:SettingInfo">
        <StackPanel>
            <TextBlock Text="{Binding FriendlyName}" />
            <controls:CategorySelector SelectedCategory="{Binding Value, Mode=TwoWay}"
                                       HorizontalAlignment="Stretch" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
