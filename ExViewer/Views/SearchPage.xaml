<Page x:Class="ExViewer.Views.SearchPage"
      x:Name="root"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ExViewer.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:tk="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:vm="using:ExViewer.ViewModels"
      xmlns:db="using:ExViewer.Database"
      mc:Ignorable="d"
      xmlns:controls="using:ExViewer.Controls"
      xmlns:client="using:ExClient"
      NavigationCacheMode="Enabled">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <DrillInNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <RelativePanel>
        <AppBar x:Name="ab"
                ClosedDisplayMode="Compact"
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                Opening="ab_Opening"
                Closed="ab_Closed"
                Opened="ab_Opened"
                Tapped="ab_Tapped">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource SplitButtonStyle}"
                        Click="btn_pane_Click" />
                <AutoSuggestBox x:Uid="SearchPageAutoSuggestBox"
                                x:Name="asb"
                                Grid.Column="1"
                                Margin="8"
                                Text="{x:Bind VM.KeyWord, Mode=TwoWay}"
                                PlaceholderText="Search..."
                                QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                TextChanged="asb_TextChanged"
                                SuggestionChosen="asb_SuggestionChosen"
                                QueryIcon="Find">
                    <AutoSuggestBox.Resources>
                        <Style x:Key="SuggestionCaptionTextBlockStyle"
                               TargetType="TextBlock"
                               BasedOn="{StaticResource CaptionTextBlockStyle}">
                            <Setter Property="Foreground"
                                    Value="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                        </Style>
                        <DataTemplate x:Key="SearchHistory"
                                      x:DataType="db:SearchHistory">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <controls:HighlightTextBlock Text="{x:Bind Content}"
                                                             HighlightText="{x:Bind Highlight}"
                                                             Grid.Column="1" />
                                <TextBlock Text="{x:Bind Time, Converter={StaticResource DateTimeToStringConverter}}"
                                           Style="{StaticResource SuggestionCaptionTextBlockStyle}"
                                           Grid.Row="1"
                                           Grid.Column="1" />
                                <Path Fill="{ThemeResource SystemControlPageTextBaseHighBrush}"
                                      StrokeThickness="0"
                                      Stretch="Uniform"
                                      Grid.RowSpan="2"
                                      VerticalAlignment="Center"
                                      Margin="8,0"
                                      Data="M-12,-9 L-12,-3 L-6,-3 L-6,-4.5 L-10.5,-4.5 L-10.5,-9 Z
                                      M-10.5,-5.809 
                                      A12,12,0,1,1,-11.55,3.255
                                      L-10.106,2.848
                                      A10.5,10.5,0,1,0,-9.487,-4.5
                                      L-10.5,-4.5 Z
                                      M-0.75,-6
                                      L0.75,-6 L0.75,-0.311
                                      L4.95,3.889 L3.889,4.95
                                      L-0.75,0.311" />
                            </Grid>
                        </DataTemplate>
                        <DataTemplate x:Key="AutoCompletion"
                                      x:DataType="vm:AutoCompletion">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{x:Bind Content}"
                                           Grid.Column="1" />
                                <Path Fill="{ThemeResource SystemControlPageTextBaseHighBrush}"
                                      StrokeThickness="0"
                                      Stretch="Uniform"
                                      Grid.RowSpan="2"
                                      VerticalAlignment="Center"
                                      Margin="8,0"
                                      Data="M0,18.5 H14 V20 H0Z
                                      M16,20 L20,16 L23.8258,7.0269 A2.1742,2.1742,0,1,0,19.8528,5.3215 L16,14.2945Z" />
                            </Grid>
                        </DataTemplate>
                    </AutoSuggestBox.Resources>
                    <AutoSuggestBox.ItemTemplateSelector>
                        <controls:DataTemplateSelector>
                            <controls:DataTemplateKeyValuePair Key="ExViewer.DataBase.SearchHistory"
                                                               Value="{StaticResource SearchHistory}" />
                            <controls:DataTemplateKeyValuePair Key="ExViewer.ViewModels.AutoCompletion"
                                                               Value="{StaticResource AutoCompletion}" />
                        </controls:DataTemplateSelector>
                    </AutoSuggestBox.ItemTemplateSelector>
                    <AutoSuggestBox.TextBoxStyle>
                        <Style TargetType="TextBox"
                               BasedOn="{StaticResource AutoSuggestBoxTextBoxStyle}">
                            <Setter Property="InputScope"
                                    Value="AlphanumericHalfWidth" />
                        </Style>
                    </AutoSuggestBox.TextBoxStyle>
                    <AutoSuggestBox.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding"
                                    Value="4,0" />
                        </Style>
                    </AutoSuggestBox.ItemContainerStyle>
                </AutoSuggestBox>
                <ScrollViewer x:Name="sv_AdvancedSearch"
                              Grid.Row="1"
                              Grid.Column="1"
                              IsEnabled="False"
                              VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <controls:CategorySelector x:Name="cs_Category"
                                                   XYFocusDown="{x:Bind ts_Advanced}"
                                                   SelectedCategory="{x:Bind VM.Category, Mode=TwoWay}"
                                                   HorizontalAlignment="Center" />
                        <ToggleSwitch x:Uid="SearchPageAdvancedToggleButton"
                                      x:Name="ts_Advanced"
                                      Margin="8"
                                      Style="{StaticResource TextBlockToggleSwitch}"
                                      OffContent="Show advanced options"
                                      OnContent="Hide advanced options"
                                      HorizontalAlignment="Center" />
                        <ListView x:Name="lv_AdvancedSearch"
                                  Visibility="{x:Bind ts_Advanced.IsOn, Converter={StaticResource TrueToVisibleConverter}, Mode=OneWay}"
                                  Padding="0,0,0,8"
                                  Style="{StaticResource StackPanelListViewStyle}">
                            <CheckBox x:Uid="SearchPageNamesCheckBox"
                                      XYFocusUp="{x:Bind ts_Advanced}"
                                      Content="Search gallery name"
                                      IsChecked="{x:Bind VM.AdvancedSearch.SearchName, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageTagsCheckBox"
                                      Content="Search gallery tags"
                                      IsChecked="{x:Bind VM.AdvancedSearch.SearchTags, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageDescriptionCheckBox"
                                      Content="Search gallery description"
                                      IsChecked="{x:Bind VM.AdvancedSearch.SearchDescription, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageTorrentNamesCheckBox"
                                      Content="Search torrent filenames"
                                      IsChecked="{x:Bind VM.AdvancedSearch.SearchTorrentFilenames, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageOnlyTorrentsCheckBox"
                                      Content="Only show galleries with torrents"
                                      IsChecked="{x:Bind VM.AdvancedSearch.GalleriesWithTorrentsOnly, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageLowPowerTagsCheckBox"
                                      Content="Search low-power tags"
                                      IsChecked="{x:Bind VM.AdvancedSearch.SearchLowPowerTags, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageDownvotedTagsCheckBox"
                                      Content="Search downvoted tags"
                                      IsChecked="{x:Bind VM.AdvancedSearch.SearchDownvotedTags, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <CheckBox x:Uid="SearchPageShowExpungedCheckBox"
                                      Content="Show expunged galleries"
                                      IsChecked="{x:Bind VM.AdvancedSearch.ShowExpungedGalleries, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Uid="SearchPageMinRatingCheckBox"
                                          MinWidth="0"
                                          Content="Minimum rating: "
                                          IsChecked="{x:Bind VM.AdvancedSearch.SearchMinimumRating, Mode=TwoWay, Converter={StaticResource NullableConverter}}" />
                                <ComboBox VerticalAlignment="Center"
                                          SelectedItem="{x:Bind VM.AdvancedSearch.MinimumRating, Mode=TwoWay, Converter={StaticResource EmptyConverter}}"
                                          Margin="12,0">
                                    <x:Int32>2</x:Int32>
                                    <x:Int32>3</x:Int32>
                                    <x:Int32>4</x:Int32>
                                    <x:Int32>5</x:Int32>
                                </ComboBox>
                            </StackPanel>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </AppBar>
        <tk:PullToRefreshListView x:Name="lv"
                                  RelativePanel.Below="ab"
                                  RelativePanel.AlignBottomWithPanel="True"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"
                                  RefreshRequested="lv_RefreshRequested"
                                  ItemsSource="{x:Bind VM.SearchResult, Mode=OneWay}"
                                  ContinuumNavigationTransitionInfo.ExitElementContainer="True"
                                  Style="{StaticResource GalleryListViewStyle}"
                                  ItemClick="lv_ItemClick">
            <tk:PullToRefreshListView.RefreshIndicatorContent>
                <tk:PullToRefreshIndicator />
            </tk:PullToRefreshListView.RefreshIndicatorContent>
            <ListView.ItemTemplate>
                <DataTemplate xmlns:c="using:ExClient"
                              xmlns:controls="using:ExViewer.Controls"
                              x:DataType="c:Gallery">
                    <controls:GalleryViewer Gallery="{x:Bind}"
                                            ContinuumNavigationTransitionInfo.IsExitElement="True" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Header>
                <TextBlock x:Uid="SearchPageEmptyTextBlock"
                           HorizontalAlignment="Center"
                           Margin="12"
                           Style="{StaticResource BaseTextBlockStyle}"
                           Visibility="{x:Bind VM.SearchResult.IsEmpty, FallbackValue=Collapsed, Converter={StaticResource TrueToVisibleConverter}, Mode=OneWay}"
                           Text="No hits found" />
            </ListView.Header>
            <ListView.Footer>
                <TextBlock x:Uid="SearchPageLoadingMoreTextBlock"
                           HorizontalAlignment="Center"
                           Margin="12"
                           Style="{StaticResource BaseTextBlockStyle}"
                           Visibility="{x:Bind VM.SearchResult.HasMoreItems, FallbackValue=Visible, Converter={StaticResource TrueToVisibleConverter}, Mode=OneWay}"
                           Text="Loading more galleries..." />
            </ListView.Footer>
        </tk:PullToRefreshListView>
    </RelativePanel>
</Page>
