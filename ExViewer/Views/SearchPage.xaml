<Page x:Class="ExViewer.Views.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ExViewer.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      NavigationCacheMode="Enabled">
    <Page.Resources>
        <Style x:Key="Fliter"
               TargetType="ToggleButton">
            <Setter Property="IsThreeState"
                    Value="False" />
            <Setter Property="IsChecked"
                    Value="True" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalContentAlignment"
                    Value="Stretch" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Template"
                    Value="{StaticResource ToggleButtonControlTemplate}" />
        </Style>
        <ControlTemplate x:Key="ToggleButtonControlTemplate"
                         TargetType="ToggleButton">
            <Grid x:Name="RootGrid"
                  Background="{TemplateBinding Background}">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Target="ContentPresenter.(UIElement.Opacity)"
                                        Value="0" />
                            </VisualState.Setters>
                            <Storyboard>
                                <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="PointerOver">
                            <VisualState.Setters>
                                <Setter Target="ContentPresenter.(UIElement.Opacity)"
                                        Value="0.3" />
                            </VisualState.Setters>
                            <Storyboard>
                                <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Target="ContentPresenter.(UIElement.Opacity)"
                                        Value="0.2" />
                            </VisualState.Setters>
                            <Storyboard>
                                <PointerDownThemeAnimation Storyboard.TargetName="RootGrid" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Checked">
                            <Storyboard>
                                <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="CheckedPointerOver">
                            <VisualState.Setters>
                                <Setter Target="ContentPresenter.(UIElement.Opacity)"
                                        Value="0.9" />
                            </VisualState.Setters>
                            <Storyboard>
                                <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="CheckedPressed">
                            <VisualState.Setters>
                                <Setter Target="ContentPresenter.(UIElement.Opacity)"
                                        Value="0.7" />
                            </VisualState.Setters>
                            <Storyboard>
                                <PointerDownThemeAnimation Storyboard.TargetName="RootGrid" />
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <ContentPresenter x:Name="ContentPresenter"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  Content="{TemplateBinding Content}"
                                  ContentTransitions="{TemplateBinding ContentTransitions}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Padding="{TemplateBinding Padding}"
                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                  AutomationProperties.AccessibilityView="Raw" />
            </Grid>
        </ControlTemplate>
    </Page.Resources>
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <DrillInNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <RelativePanel>
        <AppBar x:Name="ab"
                ClosedDisplayMode="Compact"
                Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                Opening="ab_Opening"
                Closed="ab_Closed"
                Opened="ab_Opened"
                Tapped="ab_Tapped">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource NavigationBackButtonSmallStyle}"
                        Content="&#xE700;"
                        Height="48"
                        Width="48"
                        Click="btn_pane_Click" />
                <AutoSuggestBox x:Name="asb"
                                Grid.Column="1"
                                Margin="8"
                                IsEnabled="False"
                                PlaceholderText="Search..."
                                QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                QueryIcon="Find" />
                <GridView Grid.Row="1"
                          Grid.Column="1"
                          Margin="0,0,0,0"
                          x:Name="gv_AdvancedSearch"
                          x:DeferLoadStrategy="Lazy"
                          HorizontalAlignment="Center">
                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="MinHeight"
                                    Value="0" />
                            <Setter Property="MinWidth"
                                    Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewItem">
                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GridView.ItemContainerStyle>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_Doujinshi">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/Doujinshi_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/Doujinshi.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_Manga">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/Manga_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/Manga.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_ArtistCG">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/ArtistCG_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/ArtistCG.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_GameCG">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/GameCG_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/GameCG.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_Western">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/Western_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/Western.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_NonH">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/NonH_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/NonH.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_ImageSet">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/ImageSet_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/ImageSet.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_Cosplay">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/Cosplay_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/Cosplay.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_AsianPorn">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/AsianPorn_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/AsianPorn.png"
                               Stretch="None" />
                    </ToggleButton>
                    <ToggleButton Style="{StaticResource Fliter}"
                                  x:Name="tb_Misc">
                        <ToggleButton.Background>
                            <ImageBrush Stretch="None"
                                        ImageSource="ms-appx:///CategoryImage/Misc_d.png" />
                        </ToggleButton.Background>
                        <Image Source="ms-appx:///CategoryImage/Misc.png"
                               Stretch="None" />
                    </ToggleButton>
                </GridView>
            </Grid>
        </AppBar>
        <ListView x:Name="lv"
                  ContinuumNavigationTransitionInfo.ExitElementContainer="True"
                  ItemsSource="{x:Bind SearchResult, Mode=OneWay}"
                  IncrementalLoadingThreshold="0.5"
                  IsItemClickEnabled="True"
                  ItemClick="lv_ItemClick"
                  RelativePanel.AlignBottomWithPanel="True"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignRightWithPanel="True"
                  RelativePanel.Below="ab"
                  VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate xmlns:c="using:ExClient"
                              x:DataType="c:Gallery">
                    <Grid Padding="8,4"
                          Height="200">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ContentPresenter Background="{ThemeResource SystemControlBackgroundBaseMediumBrush}">
                            <Image Source="{x:Bind Thumb}"
                                   Stretch="Uniform" />
                        </ContentPresenter>
                        <RelativePanel Padding="8,4,4,4"
                                       Grid.Column="1">
                            <TextBlock x:Name="Title"
                                       Text="{x:Bind Title}"
                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                       ContinuumNavigationTransitionInfo.IsExitElement="True"
                                       TextWrapping="WrapWholeWords"
                                       MaxLines="3"
                                       TextTrimming="CharacterEllipsis"
                                       RelativePanel.AlignLeftWithPanel="True"
                                       RelativePanel.AlignRightWithPanel="True"
                                       RelativePanel.AlignTopWithPanel="True">
                                <ToolTipService.ToolTip>
                                    <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                                               TextWrapping="WrapWholeWords" />
                                </ToolTipService.ToolTip>
                            </TextBlock>
                            <Image x:Name="Category"
                                   Source="{x:Bind Category, Converter={StaticResource CategoryToImageConverter}}"
                                   RelativePanel.Below="Title"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   Stretch="None" />
                            <TextBlock x:Name="RecordCount"
                                       RelativePanel.RightOf="Category"
                                       RelativePanel.AlignVerticalCenterWith="Category"
                                       Text="{x:Bind RecordCount, ConverterParameter=\{0\} Pages, Converter={StaticResource StringConverter}}" />
                            <TextBlock x:Name="Rating"
                                       RelativePanel.Below="Category"
                                       Text="{x:Bind Rating, Converter={StaticResource RateStringConverter}}"
                                       FontFamily="Segoe MDL2 Assets" />
                        </RelativePanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="VerticalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.Footer>
                <TextBlock HorizontalAlignment="Center"
                           Margin="12"
                           Style="{StaticResource BaseTextBlockStyle}"
                           Visibility="{x:Bind SearchResult.HasMoreItems, FallbackValue=Collapsed, Converter={StaticResource TrueToVisibleConverter}, Mode=OneWay}">Loading more galleries...</TextBlock>
            </ListView.Footer>
        </ListView>
        <TextBlock Margin="12"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Visibility="{x:Bind SearchResult.IsEmpty, FallbackValue=Collapsed, Converter={StaticResource TrueToVisibleConverter}, Mode=OneWay}"
                   RelativePanel.Below="ab"
                   RelativePanel.AlignHorizontalCenterWithPanel="True">No hits found</TextBlock>
        <TextBlock Margin="12"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Visibility="{x:Bind SearchResult, Converter={StaticResource NullToVisibleConverter}, Mode=OneWay}"
                   RelativePanel.Below="ab"
                   RelativePanel.AlignHorizontalCenterWithPanel="True">Searching...</TextBlock>
    </RelativePanel>
</Page>
