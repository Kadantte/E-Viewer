<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ExViewer.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ExClient="using:ExClient"
      x:Class="ExViewer.Views.SettingsPage"
      mc:Ignorable="d"
      xmlns:settings="using:ExViewer.Settings">
    <Page.Resources>
        <local:SettingTemplateSelector x:Key="SettingTemplateSelector" />
        <DataTemplate x:Name="String"
                      x:DataType="settings:SettingInfo">
            <TextBox Header="{x:Bind FriendlyName}"
                     Text="{x:Bind Value, Converter={StaticResource EmptyConverter}, Mode=TwoWay}"
                     MinHeight="50" />
        </DataTemplate>
        <DataTemplate x:Name="Number"
                      x:DataType="settings:SettingInfo">
            <local:SettingSlider Header="{x:Bind FriendlyName}"
                                 SettingValue="{x:Bind}">
            </local:SettingSlider>
        </DataTemplate>
        <DataTemplate x:Name="Enum"
                      x:DataType="settings:SettingInfo">
            <local:SettingComboBox Header="{x:Bind FriendlyName}"
                                   SettingValue="{x:Bind}"
                                   HorizontalAlignment="Stretch" />
        </DataTemplate>
    </Page.Resources>

    <Pivot x:Name="pv_root">
        <Pivot.HeaderTemplate>
            <DataTemplate x:DataType="settings:GroupedSettings">
                <TextBlock Text="{x:Bind GroupName}" />
            </DataTemplate>
        </Pivot.HeaderTemplate>
        <Pivot.ItemTemplate>
            <DataTemplate x:DataType="settings:GroupedSettings">
                <ListView ItemTemplateSelector="{StaticResource SettingTemplateSelector}"
                          ItemsSource="{x:Bind}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter HorizontalAlignment="Stretch"
                                                          Margin="{TemplateBinding Margin}"
                                                          Padding="{TemplateBinding Padding}"
                                                          Foreground="{TemplateBinding Foreground}"
                                                          Background="{TemplateBinding Background}"
                                                          BorderBrush="{TemplateBinding BorderBrush}" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="MinHeight"
                                    Value="0" />
                            <Setter Property="Padding"
                                    Value="8,4" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </DataTemplate>
        </Pivot.ItemTemplate>
    </Pivot>
</Page>
