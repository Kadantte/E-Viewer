<Page x:Class="ExViewer.Views.ImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:ExViewer.Views"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      NavigationCacheMode="Enabled">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <EntranceNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <local:LoadStateToVisualStateConverter x:Key="LoadStateToVisualStateConverter" />
    </Page.Resources>
    <RelativePanel>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <local:DeviceTrigger ActiveType="Windows.Mobile" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="abb_fullScreen.Visibility"
                                Value="Collapsed" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <FlipView x:Name="fv"
                  Background="{x:Null}"
                  RelativePanel.AlignRightWithPanel="True"
                  RelativePanel.AlignLeftWithPanel="True"
                  RelativePanel.AlignBottomWithPanel="True"
                  EntranceNavigationTransitionInfo.IsTargetElement="True"
                  RelativePanel.AlignTopWithPanel="True"
                  SelectionChanged="fv_SelectionChanged">
            <FlipView.ItemTemplate>
                <DataTemplate xmlns:c="using:ExClient"
                              x:DataType="c:GalleryImage">
                    <Grid DoubleTapped="fvi_DoubleTapped"
                          Tapped="fvi_Tapped">
                        <Grid.Resources>
                            <local:InvertConverter x:Key="con">
                                <local:InvertConverter.Raw>
                                    <local:ObjectToBooleanConverter>
                                        <local:ObjectToBooleanConverter.ValueForTrue>
                                            <GridLength>48</GridLength>
                                        </local:ObjectToBooleanConverter.ValueForTrue>
                                        <local:ObjectToBooleanConverter.ValueForFalse>
                                            <GridLength>0</GridLength>
                                        </local:ObjectToBooleanConverter.ValueForFalse>
                                        <local:ObjectToBooleanConverter.InnerConverter>
                                            <local:BooleanToVisibilityConverter />
                                        </local:ObjectToBooleanConverter.InnerConverter>
                                    </local:ObjectToBooleanConverter>
                                </local:InvertConverter.Raw>
                            </local:InvertConverter>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding Visibility, ElementName=cb_top, Converter={StaticResource con}}" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ProgressBar Value="{x:Bind Progress, Mode=OneWay}"
                                     Visibility="{x:Bind State, Mode=OneWay, Converter={StaticResource LoadStateToVisualStateConverter}}"
                                     Foreground="{x:Bind State, Mode=OneWay, Converter={StaticResource LoadStateToVisualStateConverter}}"
                                     IsIndeterminate="{x:Bind State, Mode=OneWay, Converter={StaticResource LoadStateToVisualStateConverter}}"
                                     VerticalAlignment="Top"
                                     Grid.Row="1" />
                        <ScrollViewer x:Name="sv"
                                      ZoomMode="Enabled"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"
                                      MinZoomFactor="1"
                                      Grid.RowSpan="2"
                                      SizeChanged="sv_SizeChanged"
                                      ManipulationDelta="sv_ManipulationDelta"
                                      PointerMoved="sv_PointerMoved"
                                      PointerEntered="sv_PointerEntered"
                                      PointerPressed="sv_PointerPressed">
                            <Image Source="{x:Bind Image, Mode=OneWay}"
                                   SizeChanged="Image_SizeChanged" />
                        </ScrollViewer>
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <CommandBar x:Name="cb_top"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    HorizontalContentAlignment="Stretch">
            <CommandBar.Background>
                <SolidColorBrush Color="{ThemeResource SystemChromeMediumColor}"
                                 Opacity="0.5" />
            </CommandBar.Background>
            <CommandBar.Content>
                <RelativePanel>
                    <Button x:Name="btn_pane"
                            Style="{StaticResource NavigationBackButtonSmallStyle}"
                            Content="&#xE700;"
                            Height="48"
                            Width="48"
                            Click="btn_pane_Click" />
                    <TextBlock x:Name="tb_Title"
                               Text="{x:Bind Gallery, Mode=OneWay, Converter={StaticResource GalleryToTitleStringConverter}}"
                               Style="{StaticResource BaseTextBlockStyle}"
                               Grid.Column="1"
                               Margin="8,0"
                               VerticalAlignment="Center"
                               MaxLines="1"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"
                               RelativePanel.RightOf="btn_pane"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               RelativePanel.LeftOf="tb_si">
                        <ToolTipService.ToolTip>
                            <TextBlock Text="{x:Bind Gallery, Mode=OneWay, Converter={StaticResource GalleryToTitleStringConverter}}"
                                       TextWrapping="WrapWholeWords" />
                        </ToolTipService.ToolTip>
                    </TextBlock>
                    <TextBlock x:Name="tb_si"
                               Text="{Binding ElementName=fv, Path=SelectedItem.PageId, Mode=OneWay}"
                               Style="{StaticResource BodyTextBlockStyle}"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               RelativePanel.LeftOf="tb_sep" />
                    <TextBlock x:Name="tb_sep"
                               Text="/"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Margin="0,0"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               RelativePanel.LeftOf="tb_rc" />
                    <TextBlock x:Name="tb_rc"
                               Text="{x:Bind Gallery.RecordCount, Mode=OneWay}"
                               Style="{StaticResource BodyTextBlockStyle}"
                               RelativePanel.AlignRightWithPanel="True"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               Margin="0,0,8,0" />
                </RelativePanel>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="abb_fullScreen"
                              Label="Full screen"
                              Click="abb_fullScreen_Click"
                              Icon="FullScreen" />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="abb_reload"
                              Label="Reload"
                              Click="abb_reload_Click" />
                <AppBarButton x:Name="abb_LoadOriginal"
                              Label="Load original image"
                              Click="abb_LoadOriginal_Click"
                              IsEnabled="{Binding ElementName=fv, Path=SelectedItem.OriginalLoaded, Mode=OneWay, Converter={StaticResource LogicalNotConverter}}" />
                <AppBarButton x:Name="abb_open"
                              Label="Open in browser"
                              Click="abb_open_Click" />
                <AppBarSeparator />
                <AppBarButton x:Name="abb_Info"
                              Label="Image infomation">
                    <AppBarButton.Flyout>
                        <Flyout Opening="Flyout_Opening"
                                Placement="Bottom"
                                ScrollViewer.VerticalScrollMode="Disabled">
                            <StackPanel>
                                <TextBlock x:Name="tb_Info">
                                    File name: 1.original.png<LineBreak />Size: 4.12MiB<LineBreak />Dimensions: 4444 × 3333
                                </TextBlock>
                                <Button x:Name="btn_OpenInExplorer"
                                        Content="Open in explorer"
                                        Style="{StaticResource TextBlockButtonStyle}"
                                        Click="btn_OpenInExplorer_Click"
                                        BorderThickness="0"
                                        Padding="0"
                                        Margin="0,4,0,0" />
                            </StackPanel>
                            <Flyout.FlyoutPresenterStyle>
                                <Style TargetType="FlyoutPresenter">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="FlyoutPresenter">
                                                <Border Padding="{TemplateBinding Padding}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}"
                                                        Margin="{TemplateBinding Margin}">
                                                    <ContentPresenter Content="{TemplateBinding Content}"
                                                                      Foreground="{TemplateBinding Foreground}" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Flyout.FlyoutPresenterStyle>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </RelativePanel>
</Page>
