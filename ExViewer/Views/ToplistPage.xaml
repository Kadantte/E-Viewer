                         Visibility="{x:Bind ViewModel.Galleries.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibleConverter}, FallbackValue=Collapsed}"
                         Text="No saved galleries" />
            </ListView.Header>-->
        </tk:PullToRefreshListView>
      </DataTemplate>
    </Pivot.ItemTemplate>
  </Pivot>
