<UserControl x:Class="ExViewer.Controls.GalleryViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExViewer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200"
             d:DesignWidth="1000"
             IsTabStop="False"
             UseSystemFocusVisuals="False">
    <Grid Background="{x:Bind Background, Mode=OneWay}"
          BorderBrush="{x:Bind BorderBrush, Mode=OneWay}"
          BorderThickness="{x:Bind BorderThickness, Mode=OneWay}"
          Padding="8,4"
          x:Name="gd_Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="150"
                              MinWidth="100" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Border Background="{ThemeResource SystemControlBackgroundBaseMediumBrush}"
                Grid.RowSpan="999"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                MaxHeight="240">
            <Image Source="{x:Bind Gallery.Thumb, Mode=OneWay}"
                   Stretch="Uniform" />
        </Border>
        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="12" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{x:Bind Gallery, Converter={StaticResource GalleryToTitleStringConverter}, Mode=OneWay}"
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       TextWrapping="WrapWholeWords"
                       MaxLines="3"
                       TextTrimming="CharacterEllipsis"
                       Grid.ColumnSpan="100">
                <ToolTipService.ToolTip>
                    <ToolTip x:Name="tt_Title">
                        <TextBlock Text="{x:Bind Gallery, Mode=OneWay, Converter={StaticResource GalleryToTitleStringConverter}}"
                                   TextWrapping="WrapWholeWords" />
                    </ToolTip>
                </ToolTipService.ToolTip>
            </TextBlock>
            <local:CategoryTag Category="{x:Bind Gallery.Category, Mode=OneWay}"
                               Grid.Row="2"
                               HorizontalAlignment="Left" />
            <TextBlock Text="{x:Bind Gallery.RecordCount, Mode=OneWay, ConverterParameter=\{0\} Pages, Converter={StaticResource StringConverter}}"
                       Grid.Row="4" />
            <TextBlock Text="{x:Bind Gallery.Rating, Mode=OneWay, Converter={StaticResource RateStringConverter}}"
                       FontFamily="Segoe MDL2 Assets"
                       VerticalAlignment="Center"
                       Grid.Row="3" />
            <TextBlock Text="{x:Bind Gallery.Uploader, Mode=OneWay}"
                       Grid.Row="4"
                       MaxLines="1"
                       Grid.Column="1"
                       TextTrimming="CharacterEllipsis"
                       HorizontalAlignment="Right" />
            <TextBlock Text="{x:Bind Gallery.Posted, Mode=OneWay, Converter={StaticResource DateTimeToStringConverter}}"
                       Grid.Row="3"
                       MaxLines="1"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       TextTrimming="CharacterEllipsis" />
            <TextBlock Text="{x:Bind Gallery.Language, Mode=OneWay}"
                       Grid.Row="2"
                       MaxLines="1"
                       Grid.Column="1"
                       HorizontalAlignment="Right"
                       TextTrimming="CharacterEllipsis" />
        </Grid>
    </Grid>
</UserControl>
