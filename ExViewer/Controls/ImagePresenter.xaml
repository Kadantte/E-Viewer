<UserControl x:Class="ExViewer.Controls.ImagePresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ExViewer.Controls"
             xmlns:c="using:ExClient"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <ScrollViewer x:Name="sv"
                  IsTabStop="True"
                  ZoomMode="Enabled"
                  Template="{StaticResource ScrollViewerScrollBarlessTemplate}"
                  HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Hidden"
                  MinZoomFactor="1"
                  Loading="sv_Loading"
                  ManipulationDelta="sv_ManipulationDelta"
                  PointerEntered="sv_PointerEntered"
                  PointerMoved="sv_PointerMoved"
                  PointerPressed="sv_PointerPressed"
                  ManipulationMode="All">
        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center"
              x:Name="gd_ContentRoot">
            <Image x:Name="img_Loading"
                   x:DeferLoadStrategy="Lazy"
                   Source="{ThemeResource LoadingImageSource}" 
                   Visibility="{x:Bind Image, Mode=OneWay, Converter={StaticResource NullToVisibleConverter}}"/>
            <Image x:Name="img_Thumb"
                   Source="{x:Bind Image.Thumb, Mode=OneWay}"
                   Visibility="{x:Bind Image, Mode=OneWay, Converter={StaticResource NullToCollapsedConverter}}" />
            <ContentControl x:Name="cc_Image"
                            Content="{x:Bind Image, Mode=OneWay}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            IsTabStop="False"
                            Visibility="{x:Bind Image, Mode=OneWay, Converter={StaticResource NullToCollapsedConverter}}" />
        </Grid>
    </ScrollViewer>
</UserControl>
