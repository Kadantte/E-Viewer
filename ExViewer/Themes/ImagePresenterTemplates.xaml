<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="using:ExViewer.Controls"
                    xmlns:c="using:ExClient">
    <DataTemplate x:Key="GifTemplate">
        <img:ImageView xmlns:img="using:ImageLib.Controls"
                       UriSource="{Binding ImageFileUri, Mode=OneWay}"
                       Stretch="Uniform" />
    </DataTemplate>
    <DataTemplate x:Key="NormalTemplate">
        <Image Source="{Binding Image, FallbackValue=null, Mode=OneWay}"
               Stretch="Uniform" />
    </DataTemplate>
</ResourceDictionary>
