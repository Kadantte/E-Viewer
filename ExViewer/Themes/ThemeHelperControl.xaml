<UserControl x:Class="ExViewer.Themes.ThemeHelperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.FocusVisualSecondaryBrush>
        <SolidColorBrush Color="{ThemeResource SystemChromeDisabledLowColor}" />
    </UserControl.FocusVisualSecondaryBrush>
    <UserControl.FocusVisualPrimaryBrush>
        <SolidColorBrush Color="{ThemeResource SystemBaseMediumHighColor}" />
    </UserControl.FocusVisualPrimaryBrush>
    <UserControl.Background>
        <SolidColorBrush Color="{ThemeResource SystemChromeMediumColor}" />
    </UserControl.Background>
    <UserControl.BorderBrush>
        <SolidColorBrush Color="{ThemeResource SystemChromeMediumLowColor}" />
    </UserControl.BorderBrush>
    <UserControl.Foreground>
        <SolidColorBrush Color="{ThemeResource SystemChromeHighColor}" />
    </UserControl.Foreground>
</UserControl>
